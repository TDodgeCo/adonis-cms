<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="Login to your Great American Buildings Project Portal account.">
  <meta name="author" content="">
  <title>Login - Great American Buildings</title>
  <!-- Bootstrap core CSS-->
  {{ style('./portal/vendor/bootstrap/css/bootstrap.min.css') }}
  <!-- Custom fonts for this template-->
  {{ style('./portal/vendor/font-awesome/css/font-awesome.min.css') }}
  <!-- Custom styles for this template-->
  {{ style('./portal/css/sb-admin.css') }}
</head>

<body class="bg-dark">
  <div class="container">
    @if(old('notification'))
      <div class="alert alert-danger">
        {{ old('notification') }}
      </div>
    @endif
    <div class="card card-login mx-auto mt-5">
      <div class="card-header">Login</div>
      <div class="card-body">
        <form id="postForm" action="/portal/login" method="POST">
          {{ csrfField() }}
          <div class="form-group">
            <label>Email address</label>
            <input type="email" id="email" name="email" class="form-control" aria-describedby="emailHelp" placeholder="Enter email" value="{{ old('email', '') }}">
            {{ elIf('<span class="text-danger">$self</span>', getErrorFor('email'), hasErrorFor('email')) }}
          </div>
          <div class="form-group">
            <label>Password</label>
            @unless(tempPass)
              <input type="password" id="password" name="password" class="form-control" placeholder="Password" value="{{ old('password', '') }}">
            @else
              <input type="password" id="password" name="password" class="form-control" placeholder="Password" value="{{ tempPass }}{{ old('password', '') }}">
            @endunless
            {{ elIf('<span class="text-danger">$self</span>', getErrorFor('password'), hasErrorFor('password')) }}
          </div>
          <div class="form-group">
            <div class="form-check">
              <label class="form-check-label">
                <input name="remember" class="form-check-input" type="checkbox">Remember Me</label>
            </div>
          </div>
          <button id="signupButton" type="submit" class="btn btn-primary btn-block">Login</button>
        </form>
        <div class="text-center">
          <a class="d-block small mt-3" href="/portal/register">Register an Account</a>
          <a class="d-block small" href="/portal/forgot-password">Forgot Password?</a>
        </div>
      </div>
    </div>
  </div>
  <!-- Bootstrap core JavaScript-->
  {{ script('./portal/vendor/jquery/jquery.min.js') }}
  {{ script('./portal/vendor/bootstrap/js/bootstrap.bundle.min.js') }}
  <!-- Core plugin JavaScript-->
  {{ script('./portal/vendor/jquery-easing/jquery.easing.min.js') }}
  <!-- Custome JS-->
  {{ script('./js/auth-helpers.js')}}
</body>

</html>
