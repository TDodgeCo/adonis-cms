<form id="postForm" action="/{{template}}" enctype="multipart/form-data" method="POST">
  {{ csrfField() }}
  <input type="text" name="directory" value="{{template}}" hidden>
  <div class="form-group">
    <label>Title</label>
    <input id="title" type="text" name="title" class="form-control" placeholder="Title..." value="{{ old('title', '') }}">
    {{ elIf('<span class="text-danger">$self</span>', getErrorFor('title'), hasErrorFor('title')) }}
  </div>
  <div class="form-group">
    <label>Description</label>
    <textarea id="description" name="description" class="form-control" rows="1" cols="80"></textarea>
  </div>
  <div class="form-group">
    <label>Body</label>
    <div id="editor" class="form-control"></div>
  </div>
  <input id="body" type="text" name="body" value="{{ old('body', '') }}" hidden>
  <span id="bodyError"></span>
  {{ elIf('<span class="text-danger">$self</span>', getErrorFor('body'), hasErrorFor('body')) }}
  <hr>
  <div id="faq">
    <h3>F.A.Q.'s</h3>
    <br>
    <div id="faqInputDiv">
    </div>
  </div>
  <div class="">
    <button id="addFaq" type="button">Add Another</button> <button id="faqDestroyOne" type="button">Remove Last</button>
  </div>

  <hr>
  <div class="form-group">
    <label>Hero Image</label>
    <input class="form-control" type="file" name="hero-image" multiple>
    <small>IMAGES MUST BE JPG/JPEG. 1920x280</small>
  </div>
  <div class="form-group">
    <label>Body Images</label>
    <input class="form-control" type="file" name="post-images[]" multiple>
    <small>IMAGES MUST BE JPG/JPEG. First image: 500x334 - Second image: 330x334</small>
  </div>

  <button id="saveButton" class="btn btn-primary float-right" type="button" name="button">Submit</button>
</form>
